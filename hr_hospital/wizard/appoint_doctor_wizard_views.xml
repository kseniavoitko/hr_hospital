<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="appoint_doctor_form" model="ir.ui.view">
        <field name="name">appoint.doctor.form</field>
        <field name="model">appoint.doctor.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="doctor_id"/>
                        <field name="patient_ids"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Appoint"
                            name="action_appoint"
                            class="btn-primary"
                            type="object"/>
                    <button special="cancel" class="oe_link" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_wizard"
            model="ir.actions.act_window">
        <field name="name">Appoint Doctor</field>
        <field name="res_model">appoint.doctor.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_patient"/>
        <field name="binding_view_types">list</field>
        <field name="binding_type">action</field>
    </record>
</odoo>
