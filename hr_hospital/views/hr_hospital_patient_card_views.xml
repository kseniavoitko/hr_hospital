<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_patient_card_form" model="ir.ui.view">
        <field name="name">hr_hospital.patient.card.form</field>
        <field name="model">hr_hospital.patient.card</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patient_card_tree" model="ir.ui.view">
        <field name="name">hr_hospital.patient.card.tree</field>
        <field name="model">hr_hospital.patient.card</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>
