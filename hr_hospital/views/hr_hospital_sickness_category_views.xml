<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_sickness_category_form" model="ir.ui.view">
        <field name="name">hr_hospital.sickness.category.form</field>
        <field name="model">hr_hospital.sickness.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                    <notebook>
                        <page string="Sickness">
                            <field name="sickness_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_sickness_category_tree" model="ir.ui.view">
        <field name="name">hr_hospital.sickness.category.tree</field>
        <field name="model">hr_hospital.sickness.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="complete_name"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_sickness_category_act_window" model="ir.actions.act_window">
        <field name="name">Sickness categories</field>
        <field name="res_model">hr_hospital.sickness.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Sickness categories"
              id="hr_hospital.sickness_category"
              parent="hr_hospital.menu_other"
              action="hr_hospital_sickness_category_act_window"/>
</odoo>
