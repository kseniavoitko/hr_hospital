<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.form</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="name"/>
                            <field name="specialization"/>
                            <field name="is_intern"/>
                            <field name="intern_id"
                                   attrs="{'invisible': [('is_intern','=',True)]}"/>
                            <field name="mentor_id"
                                   attrs="{'invisible': [('is_intern','=',False)]}"/>
                        </group>
                        <group>
                            <field name="photo"/>
                            <field name="gender"/>
                            <field name="telephone_number"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Visits">
                            <field name="visit_ids">
                                <tree editable="bottom">
                                    <field name="visit_date"/>
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr_hospital.doctor.tree</field>
        <field name="model">hr_hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active"/>
                <field name="name"/>
                <field name="specialization"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr_hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Doctors"
              id="hr_hospital.doctor"
              parent="hr_hospital.menu_root"
              action="hr_hospital_doctor_act_window"/>
</odoo>
