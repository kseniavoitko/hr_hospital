<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_sample_type_form" model="ir.ui.view">
        <field name="name">hr_hospital.sample.type.form</field>
        <field name="model">hr_hospital.sample.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                    <notebook>
                        <page string="Samples">
                            <field name="sample_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_sample_type_tree" model="ir.ui.view">
        <field name="name">hr_hospital.sample.type.tree</field>
        <field name="model">hr_hospital.sample.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="complete_name"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_sample_type_act_window" model="ir.actions.act_window">
        <field name="name">Sample types</field>
        <field name="res_model">hr_hospital.sample.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Sample types"
              id="hr_hospital.sample_type"
              parent="hr_hospital.menu_other"
              action="hr_hospital_sample_type_act_window"/>
</odoo>
