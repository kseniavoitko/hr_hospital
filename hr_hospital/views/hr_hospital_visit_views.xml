<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_visit_form" model="ir.ui.view">
        <field name="name">hr_hospital.visit.form</field>
        <field name="model">hr_hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="name"/>
                            <field name="visit_date"/>
                        </group>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="diagnose_id"/>
                        </group>
                        <field name="recommendation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_visit_tree" model="ir.ui.view">
        <field name="name">hr_hospital.visit.tree</field>
        <field name="model">hr_hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="visit_date"/>
                <field name="name"/>
                <field name="patient_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_visit_action" model="ir.actions.act_window">
        <field name="name">Hospital Visits</field>
        <field name="res_model">hr_hospital.visit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('patient_id','=', active_id)]</field>
    </record>

    <record id="hr_hospital_create_visit_from_patient_action" model="ir.actions.act_window">
        <field name="name">Create Visit</field>
        <field name="res_model">hr_hospital.visit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_patient_id': active_id}</field>
    </record>

    <record id="hr_hospital_create_visit_from_doctor_action" model="ir.actions.act_window">
        <field name="name">Create Visit</field>
        <field name="res_model">hr_hospital.visit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_doctor_id': active_id}</field>
    </record>

    <record id="hr_hospital_visit_calendar" model="ir.ui.view">
        <field name="name">hr_hospital.visit.calendar</field>
        <field name="model">hr_hospital.visit</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar date_start="visit_date" date_stop="visit_date"
                      string="Visits" mode="month">
                <field name="patient_id"/>
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record id="hr_hospital_visit_act_window" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="res_model">hr_hospital.visit</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem name="Visits"
              id="hr_hospital.visit"
              parent="hr_hospital.menu_other"
              action="hr_hospital_visit_act_window"/>
</odoo>
